<% if current_user.admin? %>
  <div class="large-container"> 
    <div class="pull-right">
      <%= link_to '<i class="fa fa-trash-o fa-lg" aria-hidden="true"></i> Delete Course'.html_safe, @course, method: :delete, class: "btn btn-default btn-red", data: { confirm: 'Are you sure? Once the course is deleted, there is no way to restore it. This will also cause problems if any users have purchase this course - the matching purchased course would need to be deleted as well.' } %>
    </div>
  </div>
<% end %>

