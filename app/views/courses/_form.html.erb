<div class="large-container">  
  <%= simple_form_for @course do |f| %>
    <% if @course.errors.any? %>
      <div id="error_explanation">
        <h2>
          <%= "#{pluralize(@course.errors.count, "error")} prohibited this course from being saved:" %>
        </h2>
        <ul>
          <% @course.errors.full_messages.each do |msg| %>
            <li>
              <%= msg %>
            </li>
            <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.input :title, placeholder: 'Course Title', label: false, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.input :description, placeholder: 'Description', label: false, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.input :price, placeholder: 'Price', label: false, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.input :ce_hours, placeholder: 'CE Hours', label: false, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.input :body, label: false, :as => :ckeditor, input_html: {:ckeditor => {:toolbar => 'FULL'}}, class: "form-control" %>
    </div>

    <br>

    <div class="form-group">
      <%= f.button :submit, class: "btn-block" %>
    </div>
  <% end %>
</div>