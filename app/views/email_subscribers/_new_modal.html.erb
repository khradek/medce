
<!-- Modal -->
<%= form_for(@email_subscriber, remote: true) do |f| %>
  <div class="modal fade" id="new_subscriber" tabindex="-1" role="dialog" aria-labelledby="my_modal_label" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <div class="h25-custom">Sign Up For Free 
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
        </div>
        <div class="modal-body">
          <p class="bottom-margin-15">Please enter your email address below to sign up for our monthly addiciton email.</p>
          <%= invisible_captcha %>
          <div class="field">
            <%= f.email_field :email, class: "form-control", placeholder: "Enter email address here" %>
          </div>
        </div>
        <div class="modal-footer">
          <%= f.button "Sign Up Now", class: "btn btn-blue btn-block" %>
        </div>
      </div>
    </div>
  </div>
<% end %>