
<div class=" h3-custom bottom-margin-8">Recent Articles:</div>
<% @recent_articles.each do |article| %>
  <div class="h4-custom bottom-margin-8">
    <% if article.external %>  
      <%= link_to "<i class='fa fa-caret-right' aria-hidden='true'></i> #{article.title}".html_safe, article.link, :target => "_blank", class: "bold-text dark-blue-text" %>
    <% else %>
      <%= link_to "<i class='fa fa-caret-right' aria-hidden='true'></i> #{article.title}".html_safe, article, class: "bold-text dark-blue-text" %>
    <% end %>  
    </div>  
<% end %>
<hr class="light-smoke-short">
<div class="h3-custom bottom-margin-8">Search</div>
<div>
  <%= search_form_for @q, html: { class: "form-inline-block" } do |f| %>
    <%= f.search_field :title_or_body_or_category_cont, placeholder: "Search Articles...", class: "form-control" %>
  <% end %>
</div>
<hr class="light-smoke-short">
