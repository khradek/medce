<div class="well">

  <div class="row">
    <div class="col-xs-8">
      <h4><%= course.title %></h4>
    </div>
    <div class="col-xs-4">

      <%= form_for order_item, remote: true do |f| %>
        <h4 class="text-right">Unit Price: <span style="color: green"><%= number_to_currency order_item.unit_price %></span></h4>
        <div class="row">
          <div class="col-xs-4">
            <%= f.hidden_field :course_id, value: course.id %>
          </div>
          <div class="col-xs-8 text-right">
            <div class="btn-group">
              <%= link_to "Delete", order_item, { data: { confirm: "Are you sure you wish to delete the course '#{order_item.course.title}' from your cart?" }, method: :delete, remote: true, class: "btn btn-red" } %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

  </div>
</div>