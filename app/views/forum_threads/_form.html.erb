

<hr>
<%= form_for @forum_thread do |f| %>

  <div class="row">
    <div class="col-xs-12">
      <div class="form-group">
        <%= f.select(:category, options_for_select([['General', 'General'], ['Counseling', 'Counseling'], ['Law Enforcement', 'Law Enforcement'], ['Legal', 'Legal'], ['Medical', 'Medical'], ['Science/Lab', 'Science/Lab']], :selected => f.object.category), {prompt: "Select a Category..."}, {class: "form-control"}) %>
      </div>  
    </div>
  </div>

  <div class="form-group">
    <%= f.text_field :subject, placeholder: "Subject", class: "form-control" %>
  </div>

  <%= f.fields_for :forum_posts do |p| %>
    <div class="form-group">
      <%= p.cktext_area :body, :ckeditor => {:toolbar => 'mini', :width=>'100%', :height=>'250px'} %>
    </div>
  <% end %>



  <div class="form-group">
    <%= f.submit "Create Thread", class: "btn btn-blue btn-block" %>
  </div>
<% end %>

