
<% unless user_signed_in? %>
  <div class="top-button-container">
    
    <span class="brand-text-container small-screen-hide">
      <%= link_to "Addiction Team USA", root_path, class: "brand-text" %>
    </span>

    <div class="left-container small-screen-hide">
      <%= link_to "Sign In", new_user_session_path, class: "btn btn-gray btn-sm btn-block" %>
    </div>
    <div class="left-container-sm-screen small-screen-show">
      <%= link_to "Sign In", new_user_session_path, class: "btn btn-gray btn-sm btn-block" %>
    </div>
  </div>
<% else %>
  <div class="top-button-container">
    <span class="brand-text-container small-screen-hide">
      <%= link_to "Addiction Team USA", root_path, class: "brand-text" %>
    </span>  
    <div class="right-container-message">
      You are signed in as <%= current_user.display_name %>
    </div>
  </div>
<% end %>

<nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <span class="navbar-brand slogan-text small-screen-hide"></span>
      <%= link_to "Addiction Team USA", root_path, class: "navbar-brand divider-vertical-rt small-screen-show" %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

      <ul class="nav navbar-nav navbar-right">
        <li class="divider-vertical-lt <%= is_active?('/about') %>" ><%= link_to 'About', about_path %></li>
        <li class="divider-vertical-lt <%= is_active?('/articles') %>" ><%= link_to 'Addiction Articles', articles_path, class: "#{'blue-nav' if controller_name == 'articles'}" %></li>
        <li class="divider-vertical-lt <%= is_active?('/medical_professionals') %>" ><%= link_to 'Find an Addiction Doctor or Counselor', med_profs_path %></li>
        <li class="divider-vertical-rt divider-vertical-lt <%= is_active?('/contact') %>" ><%= link_to 'Contact Us', contact_path %></li>
        <% if user_signed_in? %> 
          <li class="dropdown divider-vertical-rt">        
            <a href="#" data-toggle="dropdown" class="<%= 'blue-nav' if controller_name == 'registrations' || controller_name == 'sessions' %>"><i class="fa fa-user fa-lg" aria-hidden="true"></i> <b class="caret"></b></a>
            <ul class="dropdown-menu">
                <li class="<%= is_active?('/users/edit') %> nav-underline"><%= link_to "My Account", edit_user_registration_path %></li>
                <li class=nav-top-padding><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li></li>
            </ul>
          </li>

          <li class="<%= is_active?('/cart') %>">
            <%= link_to "My Cart", cart_path %>
          </li>
          <li class="cart-container hidden-md hidden-sm hidden-xs">
            <span class="cart-text"><%= render 'layouts/cart_text' %></span>
          </li>
        <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>







